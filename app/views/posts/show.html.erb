<%# @post.errors.full_messages.join(', ') %>
<h1>All Posts</h1>
<h2><%= @post.title %></h2>
<p><%= @post.body %></p>
<%= link_to 'edit', edit_post_path(@post) %>
<%= link_to 'delete', post_path(@post),
    method: :delete, data: { confirm: 'Are you sure?' } %>
<hr />
<%= render '/comments/form' %>
<%# render '/comments/comment' %>
<div>
  <% @comments.each do |c| %>
    <%=  c.body %>
    <hr />
  <% end %>
</div>
